<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.aditmail.fumida.Activities.TampilanLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/logo_Fumida"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/awal"
            android:src="@drawable/logo_fumida" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_Fumida"
            android:gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Pengguna"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="@android:color/black"
                app:font="@font/roboto" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsername"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimaryDark">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kata Sandi"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                app:font="@font/roboto" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cdBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLupaPassword"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/button_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Fumida_Color"
                android:fontFamily="@font/roboto"
                android:text="@string/Login"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtLupaPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPwd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawableRight="@drawable/ic_key"
            android:drawableEnd="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|right|end"
            android:text="Lupa Kata Sandi?"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvRegistrasi"
            android:layout_marginBottom="15dp"
            android:src="@color/colorAccent"/>

        <TextView
            android:id="@+id/tvRegistrasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account"
            android:drawableStart="@drawable/ic_account"
            android:drawableRight="@drawable/ic_account"
            android:drawableEnd="@drawable/ic_account"
            android:drawablePadding="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|left|start"
            android:text="Registrasi Akun Baru"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>
