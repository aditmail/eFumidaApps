<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataSurveiTermiteControl">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_NavFormSurveyTermite"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/Fumida_Color"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/ic_form_survei_white" />

        <ImageView
            android:id="@+id/imageView_NavDataSurveyTermite"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/ic_data_survei_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColorHint="@color/Fumida_ColorAtas">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_CariDataTermite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:hint="Cari Data..."
                android:textColor="@color/Fumida_ColorAtas"
                android:textSize="14sp"
                android:textStyle="bold" />

        </android.support.design.widget.TextInputLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner_KategoriCariTermite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:dropDownWidth="wrap_content"
                android:entries="@array/cariPest_entries"
                android:prompt="@string/cariPest_prompt" />

            <Button
                android:id="@+id/button_CariTermite"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:background="@color/colorPrimary"
                android:text="Cari" />
        </TableRow>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_TermiteControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:dividerHeight="5dp">
    </ListView>

</LinearLayout>